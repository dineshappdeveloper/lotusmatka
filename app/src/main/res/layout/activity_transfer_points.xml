<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TransferPointsActivity.TransferPointsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/custom_appbar"
            android:id="@+id/appbarLayout"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataConText"
            android:text="@string/you_are_not_connected_to_internet"
            android:textColor="@color/white"
            android:background="@color/warningRed"
            android:padding="5dp"
            android:visibility="gone"
            android:elevation="1dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/pointIcon"
                android:src="@drawable/wallet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/walletAmount"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pointIcon"
                app:layout_constraintBottom_toBottomOf="@id/pointIcon"
                app:layout_constraintStart_toEndOf="@id/pointIcon"
                app:layout_constraintBottom_toTopOf="@id/text1"
                android:text="00"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/walletAmount"
                android:layout_marginStart="15dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/walletAmount"
                app:layout_constraintBottom_toBottomOf="@id/pointIcon"
                app:layout_constraintStart_toEndOf="@id/pointIcon"
                android:text="Available Balance"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/text1"
                android:layout_marginStart="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_mobile_number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:background="@drawable/border2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:textSize="16sp"
                android:maxLength="10"
                android:singleLine="true"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>



        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Dev"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_verified_24"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="5dp"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/verify"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:backgroundTint="#071BA4"
            app:strokeColor="@color/purple_500"
            app:strokeWidth="2dp"
            android:maxHeight="0dp"
            app:elevation="10dp"
            android:layout_gravity="end"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            android:enabled="false"
            android:onClick="verify"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pointText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            android:textSize="16sp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/pointsLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/rounded_corner_white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Enter Points"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:inputType="number"
                android:textSize="16sp"
                android:maxLength="9"
                android:singleLine="true"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/orange_color"
            android:onClick="submitPoints"
            android:text="Submit"
            app:cornerRadius="20dp"
            android:visibility="gone"
            android:paddingVertical="12dp"
            android:textAllCaps="true"
            android:textColor="@color/logInButtonTextColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/orange_color"
        android:id="@+id/progressBar"
        android:visibility="gone"/>


</RelativeLayout>