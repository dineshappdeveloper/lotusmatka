<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddFundMethodsActivity.AddFundMethodsActivity">

    <LinearLayout
        android:id="@+id/topLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/custom_appbar6"
            android:id="@+id/appbarLayout"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataConText"
            android:text="@string/you_are_not_connected_to_internet"
            android:textColor="@color/white"
            android:background="@color/warningRed"
            android:padding="5dp"
            android:visibility="gone"
            android:elevation="1dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/tab_bg_color"
            tools:listitem="@layout/recy_fund_methods_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/tabRecycler"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_line_color"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="9dp"
                    app:cardBackgroundColor="#071BA4"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/noticeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="!!Add Fund Notice!!"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/noticeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="16sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pointLyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/pointIcon"
                        android:tint="#071BA4"
                        android:src="@drawable/baseline_diamond_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/amount"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/pointIcon"
                        app:layout_constraintBottom_toBottomOf="@id/pointIcon"
                        app:layout_constraintStart_toEndOf="@id/pointIcon"
                        app:layout_constraintBottom_toTopOf="@id/text1"
                        android:text="00"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:id="@+id/amount"
                        android:layout_marginStart="15dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/amount"
                        app:layout_constraintBottom_toBottomOf="@id/pointIcon"
                        app:layout_constraintStart_toEndOf="@id/pointIcon"
                        android:text="Points"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:id="@+id/text1"
                        android:layout_marginStart="15dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/qrCodeMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/qr_code"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qr_code_sample"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="50dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/rounded_corner_white"
                        android:paddingVertical="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/upiId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="UPI ID"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/copy_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_content_copy_24"
                            android:tag="qrUpiId"
                            android:onClick="copy"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bankMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:background="@color/white"
                                android:paddingHorizontal="8dp"
                                android:layout_weight="1"
                                android:paddingVertical="8dp">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bank Name"
                                    android:textColor="@color/black"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/bankName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Indusind Bank"
                                    android:textStyle="bold"
                                    android:textColor="@color/toolbarColor"
                                    android:textSize="16sp" />
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/copyBankName"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:backgroundTint="@color/toolbarColor"
                                android:onClick="copy"
                                android:tag="bankName"
                                android:background="@drawable/baseline_circle_24">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:tint="@color/white"
                                    android:src="@drawable/baseline_copy_all_24"/>
                            </FrameLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:background="@color/white"
                                android:paddingHorizontal="8dp"
                                android:layout_weight="1"
                                android:paddingVertical="8dp">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Account Holder Name"
                                    android:textColor="@color/black"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/accountHolderName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kuldeep Kumar"
                                    android:textStyle="bold"
                                    android:textColor="@color/toolbarColor"
                                    android:textSize="16sp" />
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/copyHolderName"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:onClick="copy"
                                android:tag="HolderName"
                                android:backgroundTint="@color/toolbarColor"
                                android:background="@drawable/baseline_circle_24">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:tint="@color/white"
                                    android:src="@drawable/baseline_copy_all_24"/>
                            </FrameLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:background="@color/white"
                                android:paddingHorizontal="8dp"
                                android:layout_weight="1"
                                android:paddingVertical="8dp">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bank Account Number"
                                    android:textColor="@color/black"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/accountNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1234567890865"
                                    android:textStyle="bold"
                                    android:textColor="@color/toolbarColor"
                                    android:textSize="16sp" />
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/copyAccountNumber"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:onClick="copy"
                                android:tag="accountNumber"
                                android:backgroundTint="@color/toolbarColor"
                                android:background="@drawable/baseline_circle_24">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:tint="@color/white"
                                    android:src="@drawable/baseline_copy_all_24"/>
                            </FrameLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:background="@color/white"
                                android:paddingHorizontal="8dp"
                                android:layout_weight="1"
                                android:paddingVertical="8dp">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="IFSC Code"
                                    android:textColor="@color/black"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/ifscCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INDB0001687"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/toolbarColor"
                                    android:textSize="16sp" />
                            </LinearLayout>
                            <FrameLayout
                                android:id="@+id/copyIfscCode"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:onClick="copy"
                                android:tag="ifscCode"
                                android:backgroundTint="@color/toolbarColor"
                                android:background="@drawable/baseline_circle_24">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:tint="@color/white"
                                    android:src="@drawable/baseline_copy_all_24"/>
                            </FrameLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/imagePreview"
                    android:visibility="gone"
                    android:layout_marginHorizontal="90dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/uploadCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="20dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?selectableItemBackground">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/uploadText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Upload Screenshot"
                        android:paddingHorizontal="30dp"
                        android:textSize="14sp"
                        android:paddingVertical="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/resend_text_color"/>
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:id="@+id/amountCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corner_white">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:hint="Enter Points"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:maxLength="9"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/transIdCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@drawable/rounded_corner_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTransctionID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:hint="Enter Transaction ID"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true" >

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_x="28dp"
                            android:layout_y="23dp"
                            android:onClick="submitPoints"
                            android:paddingVertical="15dp"
                            android:text="@string/submit"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:backgroundTint="#071BA4"
                            app:cornerRadius="20dp"
                            app:strokeColor="@color/purple_500"
                            app:strokeWidth="2dp"
                            tools:ignore="UsingOnClickInXml" />
                    </WebView>
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBarWebView"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/orange_color"
        android:visibility="gone"/>

</RelativeLayout>