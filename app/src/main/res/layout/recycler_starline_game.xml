<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp"
    app:cardElevation="10dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="xdtcfgv"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/eventStatusText"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/eventStatusText"
            android:layout_below="@id/gameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="fcgvhbjn"
            android:textStyle="bold"
            android:paddingHorizontal="5dp"
            android:background="@drawable/rounded_corner_white"
            android:textColor="@color/warningRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameResult"
            app:layout_constraintStart_toStartOf="@id/gameResult"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gameResult"
            android:layout_below="@id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="***_*"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/gameName"
            app:layout_constraintEnd_toStartOf="@id/playIcon"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/playIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/play_icon"
            android:layout_marginEnd="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>